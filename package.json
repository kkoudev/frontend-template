{
  "name": "frontend-template",
  "version": "0.11.0",
  "description": "Template of frontend",
  "author": "kkoudev (Koichi Nagaoka)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kkoudev/frontend-template.git"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "run-s clean && run-p watch:* server",
    "clean": "node ./node_scripts/tasks/clean.js",
    "build:material": "node ./node_scripts/tasks/material.js",
    "build:postcss": "node ./node_scripts/tasks/postcss.js",
    "build:image": "node ./node_scripts/tasks/image.js",
    "build:pug": "node ./node_scripts/tasks/pug.js",
    "build:tslint": "node ./node_scripts/tasks/tslint.js",
    "build:fusebox": "node ./node_scripts/tasks/fusebox.js",
    "build": "run-p build:*",
    "watch:material": "cross-env NODE_WATCH=true nodemon --watch ./node_scripts --watch ./config ./node_scripts/tasks/material.js",
    "watch:postcss": "cross-env NODE_WATCH=true nodemon --watch ./node_scripts --watch ./config ./node_scripts/tasks/postcss.js",
    "watch:image": "cross-env NODE_WATCH=true nodemon --watch ./node_scripts --watch ./config ./node_scripts/tasks/image.js",
    "watch:pug": "cross-env NODE_WATCH=true nodemon --watch ./node_scripts --watch ./config ./node_scripts/tasks/pug.js",
    "watch:tslint": "cross-env NODE_WATCH=true nodemon --watch ./node_scripts --watch ./config ./node_scripts/tasks/tslint.js",
    "watch:fusebox": "cross-env NODE_WATCH=true nodemon --watch ./node_scripts --watch ./config ./node_scripts/tasks/fusebox.js",
    "server:backend": "nodemon --watch ./app/server --watch ./config ./app/server/app.js",
    "server:frontend": "nodemon --watch ./node_scripts --watch ./config ./node_scripts/tasks/server.js",
    "server": "run-p server:*",
    "patch:critical": "node ./node_scripts/tasks/critical.js",
    "patch": "run-p patch:*",
    "dist:dev": "cross-env NODE_ENV=production COMPRESS_IMAGE=true run-s clean build patch",
    "dist:prod": "cross-env NODE_ENV=production GTM_ENV=production COMPRESS_IMAGE=true run-s clean build patch"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "cluster": "^0.7.7",
    "express": "^4.16.4",
    "fg-loadcss": "^2.1.0",
    "fs-extra": "^7.0.1",
    "lodash.assign": "^4.2.0",
    "moment": "^2.23.0",
    "morgan": "^1.9.1",
    "picturefill": "^3.0.3",
    "rxjs": "^6.3.3",
    "sanitize.css": "^8.0.0",
    "ts-polyfill": "^3.0.1",
    "vanilla-lazyload": "^8.17.0",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "@types/node": "^10.12.18",
    "@types/picturefill": "^3.0.0",
    "@types/webfontloader": "^1.6.29",
    "autoprefixer": "^9.4.4",
    "babel-eslint": "^10.0.1",
    "browser-sync": "^2.26.3",
    "chalk": "^2.4.1",
    "chokidar": "^2.0.4",
    "compress-images": "^1.4.6",
    "consolidate": "^0.15.1",
    "critical": "^1.3.4",
    "cross-env": "^5.2.0",
    "css-mqpacker": "^7.0.0",
    "csswring": "^7.0.0",
    "custom-tslint-formatters": "^2.4.0",
    "eslint": "^5.11.1",
    "fuse-box": "^3.6.0",
    "glob": "^7.1.3",
    "jest": "^23.6.0",
    "node-notifier": "^5.3.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.7",
    "postcss-assets": "^5.0.0",
    "postcss-calc": "^7.0.1",
    "postcss-easy-import": "^3.0.0",
    "postcss-functions": "^3.0.0",
    "postcss-hexrgba": "^1.0.1",
    "postcss-image-set-polyfill": "^0.4.4",
    "postcss-mixins": "^6.2.1",
    "postcss-nested": "^4.1.1",
    "postcss-reporter": "^6.0.1",
    "postcss-selector-parser": "^5.0.0",
    "postcss-simple-vars": "^5.0.1",
    "postcss-sorting": "^4.0.1",
    "postcss-sprites": "^4.2.1",
    "postcss-webfont": "^1.1.0",
    "pug": "^2.0.3",
    "stylelint": "^9.9.0",
    "stylelint-config-sugarss-recommended": "^1.3.0",
    "sugarss": "^2.0.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.2.2"
  }
}
